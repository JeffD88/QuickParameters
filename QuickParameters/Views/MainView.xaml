<Window x:Name="MainWindow" x:Class="QuickParameters.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:QuickParameters.Views"
        mc:Ignorable="d" 
        MinHeight="400" MinWidth="325"
        Height="400" Width="325"
        MaxWidth="450"
        Title="Quick Parameters"
        Icon="/QuickParameters;component/Icon/QuickParameters.ico" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="OperationNameTextBlock"
                   Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="16"
                   TextAlignment="Center"
                   Text="{Binding OperationName, UpdateSourceTrigger=PropertyChanged}"/>
        <Label x:Name="ToolNameLabel"
               Grid.Row="2"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Content="Tool Name" FontSize="16"/>
        <TextBlock x:Name="ToolNameTextBlock"
                   Grid.Row="2"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Text="{Binding ToolName, UpdateSourceTrigger=PropertyChanged}" Margin="0,9,0,10" FontSize="16"/>
        <Label x:Name="ToolNumberLabel"
               Grid.Row="3"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Content="Tool Number" FontSize="16"/>
        <TextBlock x:Name="ToolNumberTextBlock"
                   Grid.Row="3"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Text="{Binding ToolNumber, StringFormat={}{0:########}, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
        <Label x:Name="ToolDiameterLabel"
               Grid.Row="4"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Content="Tool Diameter" 
               FontSize="16"/>
        <TextBlock x:Name="ToolDiameterTextBlock"
                   Grid.Row="4"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Text="{Binding ToolDiameter, StringFormat={}{0:#.######}, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
        <Label x:Name="FeedRateLabel"
               Grid.Row="5"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Content="Feedrate" 
               FontSize="16"/>
        <TextBlock x:Name="FeedRateTextBlock"
                   Grid.Row="5"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Text="{Binding Feedrate, StringFormat={}{0:#.#####}, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
        <Label x:Name="SpindleSpeedLabel"
               Grid.Row="6"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Content="Spindle Speed" 
               FontSize="16"/>
        <TextBlock x:Name="SpindleSpeedTextBlock"
                 Grid.Row="6"
                 Grid.Column="2"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Right"
                 TextAlignment="Right"
                 Text="{Binding SpindleSpeed, StringFormat={}{0:#.#####}, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
        <Label x:Name="ToolPlaneLabel"
               Grid.Row="7"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Content="Tool Plane" 
               FontSize="16"/>
        <TextBlock x:Name="ToolPlaneTextBlock"
                 Grid.Row="7"
                 Grid.Column="2"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Right"
                 TextAlignment="Right"
                 Text="{Binding ToolPlane, UpdateSourceTrigger=PropertyChanged}" Margin="0,9,0,10" FontSize="16"/>
        <Button x:Name="CloseButton"
                Grid.Row="9"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                IsCancel="True"
                IsTabStop="False"
                Width="72"
                Height="36"
                ToolTip="Close Quick Parameters"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding ElementName=MainWindow}">
            <StackPanel>
                <Image Source="ButtonIcons/Close.png" 
                       VerticalAlignment="Center"
                       Height="32" 
                       Width="32" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
